<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Estilos -->
    <link rel="stylesheet" href="/stylesheets/home.css">
    <link rel="stylesheet" href="/stylesheets/responsividade/home-responsive.css"> <!-- RESPONSIVO -->
    <link rel="shortcut icon" href="/imagens/favicon.png" type="image/x-icon">
    <!-- Fim Estilos -->
    <!-- Box Icons -->
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
    <!-- Fim Box Icons -->
    <!-- Remix Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"/>
    <title>TechGreen</title>
    <!-- Fim Remix Icons -->
</head>
<body>
    <!-- HEADER -->
    <header>
        <a href="/home" class="logo">Tech<span>Green</span></a>

        <nav class="navlist">
            <li><a href="/home" class="ativo">Home</a></li>
            <li><a href="/shoppage">Comprar</a></li>
            <li><a href="/aboutpage">Sobre</a></li>
            <li><a href="/blogpage">Blog</a></li>
            <li><a href="/contactpage">Contato</a></li>
        </nav>

        <div class="nav-right">
            <a href="#"><i class="ri-search-line"></i></a>
            <a href="#"><i class="ri-shopping-cart-2-line"></i></a>
            <a href="/perfil"><i class="ri-user-line"></i></a>
            <div class="bx bx-menu" id="menu-icon"></div>
        </div> <!-- Fim nav-right -->

        <div id="mySidebar" class="sidebar">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
            <a href="/perfil">Perfil</a>
            <a href="/home">Home</a>
            <a href="/shoppage">Comprar</a>
            <a href="/aboutpage">Sobre</a></li>
            <a href="/blogpage">Blog</a>
            <a href="/contactpage">Contato</a>
        </div> <!--sidebar-->

        <button class="openbtn" onclick="openNav()">☰</button> <!--NavButton-->   
    </header>

    <!-- HOME -->
    <main>
        <section class="home">
            <div class="home-text">
                <h6>Destaques</h6>
                <h1>As melhores peças <br> você encontra aqui</h1>
                <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Aut, ipsam animi dolores cumque quod cum natus harum, inventore laboriosam odio sed sunt?</p>
                <a href="/shoppage" class="btn">
                    Comprar
                    <i class="ri-arrow-right-line"></i>
                </a>
            </div> <!-- Fim home-text -->
        </section> <!-- Fim home -->

        <!-- PRODUTOS MAIS VENDIDOS -->
        <section class="n-produtos">
            <div class="center-text">
                <h2>Mais Vendidos</h2>
            </div> <!-- Fim center-text -->
            <div class="n-conteudo">
                <% if (bestSellers && bestSellers.length > 0) { %>
                    <% bestSellers.forEach(product => { %>
                        <div class="row">
                            <div class="row-img">
                                <img src="<%= product.image %>" alt="<%= product.name %>">
                            </div> <!-- Fim row-img -->
                            <h3><%= product.name %></h3> <!-- NOME PRODUTO -->
                            <div class="stars">
                                <% for (let i = 0; i < 5; i++) { %>
                                    <a href="#"><i class="<%= i < product.rating ? 'ri-star-fill' : 'ri-star-line' %>"></i></a>
                                <% } %>
                                <a href="#"><%= product.rating %>/5</a>
                            </div> <!-- Fim stars -->
                            <div class="row-in">
                                <div class="row-left">
                                    <a href="#">
                                        Adicione ao carrinho
                                        <i class="ri-shopping-cart-2-line"></i>
                                    </a>
                                </div> <!-- Fim row-left -->
                                <div class="row-right">
                                    <h6>R$ <%= product.price.toFixed(2) %></h6>
                                </div> <!-- Fim row-right -->
                            </div> <!-- Fim row-in -->
                        </div> <!-- Fim row -->
                    <% }); %>
                <% } else { %>
                    <p>Não há produtos mais vendidos disponíveis.</p>
                <% } %>
            </div> <!-- Fim n-content -->
        </section> <!-- Fim n-produtos -->

        <!-- PRODUTOS MELHOR AVALIADOS -->
        <section class="n-produtos">
            <div class="center-text">
                <h2>Melhor Avaliados</h2>
            </div> <!-- Fim center-text -->
            <div class="n-conteudo">
                <% if (topRatedProducts && topRatedProducts.length > 0) { %>
                    <% topRatedProducts.forEach(product => { %>
                        <div class="row">
                            <div class="row-img">
                                <img src="<%= product.image %>" alt="<%= product.name %>">
                            </div> <!-- Fim row-img -->
                            <h3><%= product.name %></h3> <!-- NOME PRODUTO -->
                            <div class="stars">
                                <% for (let i = 0; i < 5; i++) { %>
                                    <a href="#"><i class="<%= i < product.rating ? 'ri-star-fill' : 'ri-star-line' %>"></i></a>
                                <% } %>
                                <a href="#"><%= product.rating %>/5</a>
                            </div> <!-- Fim stars -->
                            <div class="row-in">
                                <div class="row-left">
                                    <a href="#">
                                        Adicione ao carrinho
                                        <i class="ri-shopping-cart-2-line"></i>
                                    </a>
                                </div> <!-- Fim row-left -->
                                <div class="row-right">
                                    <h6>R$ <%= product.price.toFixed(2) %></h6>
                                </div> <!-- Fim row-right -->
                            </div> <!-- Fim row-in -->
                        </div> <!-- Fim row -->
                    <% }); %>
                <% } else { %>
                    <p>Não há produtos melhor avaliados disponíveis.</p>
                <% } %>
            </div> <!-- Fim n-content -->
        </section> <!-- Fim n-produtos -->
    </main>

    <!-- FOOTER -->
    <footer>
        <section class="footer">
            <div class="footer-box">
                <h3>Sobre</h3>
                <a href="/aboutpage">Sobre Nós</a>
                <a href="#">Entrega</a>
                <a href="#">Privacidade</a>
                <a href="#">Termos</a>
            </div> <!-- Fim footer-box -->

            <div class="footer-box">
                <h3>Conta</h3>
                <a href="/perfil">Entrar</a>
                <a href="/loginpage">Cadastrar</a>
                <a href="#">Carrinho</a>
                <a href="#">Ajuda</a>
            </div> <!-- Fim footer-box -->

            <div class="footer-box">
                <h3>Resources</h3>
                <a href="/home">Início</a>
                <a href="/blogpage">Blog</a>
                <a href="/contactpage">Contato</a>
                <a href="/shoppage">Comprar</a>
            </div> <!-- Fim footer-box -->

            <div class="footer-box">
                <h3>Social</h3>
                <div class="social">
                    <a href="#"><i class="ri-instagram-fill"></i></a>
                    <a href="#"><i class="ri-facebook-box-fill"></i></a>
                    <a href="#"><i class="ri-twitter-x-fill"></i></a>
                </div> <!-- Fim social -->
            </div> <!-- Fim footer-box -->
        </section> <!-- Fim footer -->

        <!-- COPYRIGHT -->
        <div class="copyright">
            <div class="end-text">
                <p>&copy; CopyRight 2024 By <a href="https://github.com/d3vluz/TechGreen">Techgreen</a></p>
            </div> <!-- Fim end-text -->
        </div> <!-- Fim copyright -->
    </footer>

    <script src="/javascripts/homescript.js"></script>
</body>
</html>